menu-1-0 = 
menu-1-0-exec = menu-open-0
menu-1-1="quick"
menu-1-1-exec= setsid quicklaunch
menu-1-2="xournal"
menu-1-2-exec = "setsid xournalpp"
menu-1-3="sync"
menu-1-3-exec = "setsid python Sync/o_school/5AHEL/Notebooks/pdfconvert.py"
menu-1-4=""
menu-1-4-exec = urxvt &
